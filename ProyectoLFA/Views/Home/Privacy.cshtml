@model ProyectoLFA.Models.Datos.Repuesta
@{
    ViewData["Title"] = "Analizador";
}

<header>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</header>
<body>

    <div class="text-center" style="margin-top:65px;">
        <h1 class="display-4">¡Escáner listo!</h1>
        <p>El analizador está listo para entrar en acción, analiza el texto y verifica el formato de la gramática.</p>
    </div>

    <div style="margin-top:50px;">
        <form asp-action="CargarArchivo" method="post" enctype="multipart/form-data" style="text-align:center;">
            <input type="file" name="File" value="Seleccionar archivo" class="btn btn-outline-dark" required />
            <input type="submit" value="Cagar archivo" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal" required />
    </form>
    </div>

    <div style="margin-top:50px;">
         <a asp-controller="Home" asp-action="Analisis_Lexico" type="button" id="mostrarDiv" class="btn btn-dark d-grid gap-2 col-6 mx-auto">Analizar texto</a>
        <div id="miDiv" class="oculto">
            <div class="card text-center" style="margin-top:50px;">
                <div class="card-header">Resumen de análisis</div>
                <div class="card-body">
                <h5 class="card-title">Resultado</h5>
                <p class="card-text">@Model.RepuestaId</p>
                </div>
            </div>
         </div>
    </div>

</body>



<script>
    var boton = document.getElementById("mostrarDiv");
    var div = document.getElementById("miDiv");

    boton.addEventListener("click", function() {
      div.style.display = "block";
    });
</script>